<?xml version="1.0" encoding="utf-8"?>
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="@dimen/widget_width_actual"
    android:minHeight="@dimen/widget_height_actual"
    android:updatePeriodMillis="60000"
    android:initialLayout="@layout/initial_widget_view"
    android:resizeMode="horizontal|vertical"
    android:widgetCategory="home_screen|keyguard"
    android:minResizeHeight="@dimen/widget_height_actual"
    android:minResizeWidth="@dimen/widget_width_actual"
    android:previewImage="@drawable/location_marker">
</appwidget-provider>

